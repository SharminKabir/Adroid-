<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp">

    <TextView
        android:layout_marginLeft="10sp"
        android:id="@+id/text_id"
        android:textAlignment="center"
        android:layout_marginRight="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat Ui Kit"
        android:background="#FFB266"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:padding="40sp"
        android:textSize="50dp"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:30"
        android:layout_marginTop="10sp"
        android:padding="10dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#FFCC99"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="JAN 10,2014"
        android:padding="0dp"
        android:layout_marginLeft="10sp"

        android:textAlignment="center"
        android:background="#FFCC99"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton

            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/s"
            android:layout_marginLeft="10sp"
            android:background="#FFCC99"
            android:padding="12dp"> </ImageButton>
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:src="@mipmap/email"
            android:background="#CCE5FF"
            android:padding="10dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="0sp">

        </ImageButton>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="25 NewYork"
            android:layout_marginLeft="10sp"
            android:padding="0dp"
            android:textSize="40dp"
            android:textAlignment="center"
            android:background="#FFCC99"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/uploading"
            android:background="#606060"
            android:padding="0dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:src="@mipmap/searching"
            android:background="#FFB266"
            android:padding="30dp">

        </ImageButton>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".71"
            android:text="WWW"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20dp"
            android:padding="26dp"
            android:textSize="30sp"
            android:background="#FFB266"/>
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/clock"
            android:background="#3C5A99"
            android:padding="20dp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="0sp">

        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:src="@mipmap/music"
            android:background="#66B2FF"
            android:padding="30dp">

        </ImageButton>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:text="NOW PLAYING"
            android:padding="35dp"
            android:background="#66B2FF"
            android:layout_marginRight="10sp"/>
    </LinearLayout>
</LinearLayout>
